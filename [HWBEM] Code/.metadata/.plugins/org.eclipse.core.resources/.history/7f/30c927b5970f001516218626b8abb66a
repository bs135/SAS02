#ifndef INC_INPUT_H_
#define INC_INPUT_H_

#include "chip.h"

#define LPC_GPIO_SEN1   	LPC_GPIO_PORT0_BASE
#define SEN1_PORT			0
#define SEN1_PIN			6

#define LPC_GPIO_SEN2		LPC_GPIO_PORT0_BASE
#define SEN2_PORT			0
#define SEN2_PIN			7

#define LPC_GPIO_LM_UP	    LPC_GPIO_PORT2_BASE
#define LM_UP_PORT			0
#define LM_UP_PIN			2

#define LPC_GPIO_LM_DOWN    LPC_GPIO_PORT1_BASE
#define LM_DOWN_PORT		0
#define LM_DOWN_PIN			8

#endif /* INC_INPUT_H_ */
